<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="ns.project1.controller.View1" displayBlock="true">
	<Shell id="shell">
		<App id="app">
			<pages><Page id="page" title="Goods Movement">
					<content>
					<sap.ui.layout.form:SimpleForm xmlns:sap.ui.layout.form="sap.ui.layout.form" xmlns:sap.ui.core="sap.ui.core" editable="true" layout="ResponsiveGridLayout" id="form0">
					    <sap.ui.layout.form:content>
                            <sap.ui.layout.form:SimpleForm xmlns:sap.ui.layout.form="sap.ui.layout.form" xmlns:sap.ui.core="sap.ui.core" id="form1" layout="ResponsiveGridLayout" editable="true" columnsXL="4" maxContainerCols="4">
					        <sap.ui.layout.form:content>
					            <Label  id="Plant"/>
					            <Input width="50%" id="iPlant" fieldWidth="20%" showValueHelp="true" enabled="true"/>
					            <Label  id="Material"/>
					            <Input width="100%" id="iMatnr" showValueHelp="true" change="onChange" valueHelpRequest=".onMatnrHelpRequested"/>
					            <Text xmlns:mvc="sap.ui.core.mvc" xmlns:sap.ui.layout.form="sap.ui.layout.form" xmlns:sap.ui.core="sap.ui.core" xmlns="sap.m" id="Mat_desc"/>                               
                                <Label  id="StgeLoc"/>
					            <Input width="50%" id="iFromSloc" showValueHelp="true" valueHelpRequest=".onSlocHelpRequested"/>
					            <Label  id="MoveStloc"/>
                                <Input width="50%" id="iToSloc" showValueHelp="true" valueHelpRequest=".onSlocHelpRequested"/>	
                                <Label  id="EntryQnt"/>
					            <Input width="100%" id="iQuant" showValueHelp="false"/>
                                <Input width="20%" id="iUom" showValueHelp="true" valueHelpRequest=".onUOMHelpRequested"/>
                                </sap.ui.layout.form:content>
					    </sap.ui.layout.form:SimpleForm>
                        <sap.ui.layout.form:SimpleForm xmlns:sap.ui.layout.form="sap.ui.layout.form" xmlns:sap.ui.core="sap.ui.core" id="form2" layout="ResponsiveGridLayout" editable="true" columnsXL="4" maxContainerCols="4">
					        <sap.ui.layout.form:content>	
                              
                                <Table noDataText="No data" id="iTab" sticky="ColumnHeaders" growingThreshold="2" visible="false" growingScrollToLoad="true">	
                                    <columns>	
                                        <Column id="column0">	
                                            <header>	
                                                <Label text="Descr. of Storage Loc." id="label0"/>	
                                            </header>	
                                        </Column>	
                                        <Column id="column1">	
                                            <header>	
                                                <Label text="Storage location" id="label1"/>	
                                            </header>	
                                        </Column>	
                                        <Column id="column2">	
                                            <header>	
                                                <Label text="Quantity" id="label2"/>	
                                            </header>	
                                        </Column></columns></Table>
                            </sap.ui.layout.form:content>
					    </sap.ui.layout.form:SimpleForm>
                            </sap.ui.layout.form:content>
					</sap.ui.layout.form:SimpleForm>
					</content>
				<footer>
				    <Toolbar class="sapContrast sapContrastPlus" width="100%" id="Footer">
				        <content>
                         <Button icon="sap-icon://alert" text="{= ${message>/}.length}" visible="{= ${message>/}.length &gt; 0}" type="Emphasized" press="onMessagePopoverPress"/>
                        <Button xmlns="sap.m" type="Accept" text="Post" id="iPost" press="onPost" activeIcon="sap-icon://system-exit"/>
                        </content>
                    </Toolbar>
				</footer>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>